{
  "compilerOptions": {
    /* ---------- basics ---------- */
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,


    /* ---------- strictness ---------- */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,


    /* ---------- path aliases ---------- */
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "lib/*": ["src/lib/*"],
      "hooks/*": ["src/hooks/*"],
      "*": ["src/*"]
    }

  },

  "include": ["src"]
}
